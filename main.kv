#import: MDRectangleFlatButton kivymd.uix.button.MDRectangleFlatButton
#import: MDToolbar kivymd.uix.toolbar.MDToolbar
<CustomLayout@BoxLayout>:
    orientation: "vertical"



    MDToolbar:
        id: toolbar
        title: "Test app"
        md_bg_color: app.theme_cls.primary_color
        background_palette: "Primary"
        elevation: 10


    ScrollView:
        size_hint_x: None
        width: box.width
        pos_hint: {"center_x": .5}
        bar_width: 0

        BoxLayout:
            id: box
            padding: dp(10)
            size_hint: None, None
            size: self.minimum_size
            spacing: dp(10)
            orientation: "vertical"
            pos_hint: {"center_x": .5}

            MDRectangleFlatButton:
                text: "Winners 1"
                opposite_colors: True
                elevation_normal: 8
                on_release: root.show()